<h1><%= @election.name %> Candidates</h1>

<%= link_to "Create Candidate", "/elections/#{@election.id}/candidates/new" %>
<%= link_to "Sort By Name", "/elections/#{@election.id}/candidates?sort=name"%>

<% @candidates.each do |candidate| %>
  <h3><%= candidate.name %></h3>
  <ul>
    <li><b>VOTES: </b><%= candidate.votes %></li>
    <li><b>INCUMBENT: </b><%= candidate.incumbent %></li>
    <li><b>ELECTION ID: </b><%= candidate.election_id %></li>
    <li><b>CREATED AT: </b><%= candidate.created_at %></li>
    <li><b>UPDATED AT: </b><%= candidate.updated_at %></li>
  </ul>
<% end %>